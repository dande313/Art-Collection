<div class="content">
<h1><%= @work.title %></h1>
<h5><%= @work.medium%></h5>
<h4><%if @work.artist.strip != ""%> created by <%= @work.artist%> <%end%> <%if @work.year != nil%> in <%= @work.year%> <%end%></h4>
<br>
<p style="width:500px"><%= @work.description%></p>
<br>
<%if @work.user == current_user %>
	<a href="/art_work/<%= @work.slug %>/edit" class="w3-button w3-round w3-grey w3-border">Edit</a>
	<a href="/art_work/<%= @work.slug %>/delete" class="w3-button w3-round w3-grey w3-border">Delete</a>
<%end%>	
</div>